@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card" style=" margin-top: 20px">
    <div class="card-header">
     
        <h3>BMI Calculator</h3>
    
    </div>
    <div class="card-body">
  

        <form method="post">
            <div class="form-group">
                <div class="row">
                    <div class="mb-3 col-lg-4">
                        <label asp-for="Height" class="form-label"></label>                    
                        <input asp-for="Height" type="number" step="0.01" class="form-control" placeholder="eg 1.56">
                    </div>
                    <div class="mb-3 col-lg-4">
                        <label asp-for="Weight" class="form-label"></label>
                        <input asp-for="Weight" type="number" step="0.01" class="form-control">

                    </div>
                    <div>
                        <input class="btn btn-success" type="submit" value="Calculate" asp-action="Index" />
                    </div>
                </div>

                
            </div>
        </form>
    </div>
    <div class="card-footer">
        <h3>Result</h3>

        <div class="row">
            <div class="col-6">
                @foreach (var item in Model.DisplayResults)
                {
                    <h4>@item</h4>
                }
            </div>

            <div class="col-6">
                <table class="table table-striped table-bordered">
                    <tr class="table-warning">
                        <td>Less than 18.5</td>
                        <td>Under weight</td>
                    </tr>
                    <tr class="table-success">
                        <td>18.5–24.9</td>
                        <td>Normal weight</td>
                    </tr>
                    <tr class="table-warning">
                        <td>25–29.9</td>
                        <td>Over weight</td>
                    </tr>
                    <tr class="table-danger">
                        <td>30 or more</td>
                        <td>Obese</td>
                    </tr>
                </table>
            </div>
         
        
        </div>
    </div>
</div>
